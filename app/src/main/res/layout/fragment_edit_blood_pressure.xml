<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8F5CC"
    android:padding="24dp">

    <!-- 返回按鈕 -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:contentDescription="返回"
        android:layout_marginBottom="16dp" />

    <!-- 使用者資訊區塊（頭像列） -->
    <LinearLayout
        android:id="@+id/etProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/home_header_bg"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_header_edit"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_user_photo"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- 基本健康資訊 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本健康資訊"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="身高(公分)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="體重(公斤)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etBirthday"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="生日"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- 血壓紀錄 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日血壓紀錄"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="偵測日期(yyyy-MM-dd)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etHeartRate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="心跳(下/分鐘)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etSystolic"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="收縮壓(mmHg)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etDiastolic"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="舒張壓(mmHg)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- 血糖紀錄跳轉 -->
    <TextView
        android:id="@+id/tvGoToBloodSugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="血糖紀錄 ➝"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#005B88"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"/>
</LinearLayout>

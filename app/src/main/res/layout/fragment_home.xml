<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#C8F5CC">

        <!-- 上方使用者資訊 (頭像 + Username) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <include layout="@layout/view_header_profile" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnEditHealthInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_edit"
                android:text="編輯健康資訊與紀錄"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="12dp"
                android:background="@drawable/home_item_bg"
                android:backgroundTint="@null"
                android:textColor="#111111"/>

            <Button
                android:id="@+id/btnAIQA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="AI智能問答"
                android:drawableLeft="@drawable/ic_ai"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:padding="12dp"
                android:background="@drawable/home_item_bg"
                android:textColor="#111111"/>

            <Button
                android:id="@+id/btnMedicationReminder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="用藥提醒"
                android:drawableLeft="@drawable/ic_pill"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:padding="12dp"
                android:background="@drawable/home_item_bg"
                android:textColor="#111111"/>

            <Button
                android:id="@+id/btnHealthChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_chart"
                android:layout_weight="1"
                android:text="健康曲線圖"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:padding="12dp"
                android:background="@drawable/home_item_bg"
                android:textColor="#111111"/>

            <Button
                android:id="@+id/btnErrorReport"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="錯誤回報"
                android:drawableLeft="@drawable/ic_report"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                android:background="@drawable/home_item_bg"
                android:textColor="#111111"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

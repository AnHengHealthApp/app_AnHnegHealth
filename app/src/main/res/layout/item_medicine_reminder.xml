<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/reminder_item_bg"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <!-- 藥品圖示 -->
    <ImageView
        android:id="@+id/icPills"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pills"
        android:contentDescription="藥品圖示" />

    <!-- 資訊欄 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="藥名"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMedicineTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用藥時間"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒時間"
            android:textSize="14sp"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- 刪除按鈕 -->
    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="刪除" />

</LinearLayout>